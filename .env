# ./.env

COMPOSE_PROJECT_NAME=base

# add more docker files with :â€¦path
COMPOSE_FILE=docker-compose.yml

# Development Testing Production
PROVISION_CONTEXT=Development

#External Ports
HTTP_PORT=80
HTTPS_PORT=443

## Versions
# app
# see: https://dockerfile.readthedocs.io/en/latest/content/DockerImages/dockerfiles/php-apache-dev.html
APP_IMAGE=webdevops/php-apache-dev
APP_TAG=7.2

WEB_DOCUMENT_ROOT=/app/public/
WEB_DOCUMENT_INDEX=index.php
WEB_PHP_TIMEOUT=600

# xdebug blackfire none
PHP_DEBUGGER=xdebug
BLACKFIRE_SERVER_ID=
BLACKFIRE_SERVER_TOKEN=

MYSQL_PORT=3306
MYSQL_IMAGE=mysql
MYSQL_TAG=5.7

MYSQL_DATABASE=app_db
MYSQL_USER=dev
MYSQL_PASSWORD=dev
MYSQL_ROOT_PASSWORD=dev

PHPMYADMIN_PORT=8080
PHPMYADMIN_IMAGE=phpmyadmin/phpmyadmin
PHPMYADMIN_TAG=4.8

MAILHOG_PORT=8025
MAILHOG_IMAGE=mailhog/mailhog
MAILHOG_TAG=v1.0.0
